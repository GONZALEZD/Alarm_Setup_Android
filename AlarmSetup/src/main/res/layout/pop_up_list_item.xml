<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/popUpItemListLayout"
    android:background="@drawable/item_list_normal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >

    <ImageView
        android:id="@+id/imageAlarmType"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"
        android:layout_margin="4dp"
        android:background="@color/colorPrimary"
        android:padding="@dimen/image_border"
        android:cropToPadding="true"
        android:src="@drawable/ic_alarm_white_48dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/image_desc_alarm_type"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.55"
        android:orientation="vertical"
        android:layout_margin="4dp" 
        >

        <TextView
            android:id="@+id/alarmTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/alarmDays"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small_size"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/itemEdit"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"
        android:layout_margin="4dp"
        android:background="@drawable/ic_build_white_48dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center_vertical"
        />

    <ToggleButton
        android:id="@+id/toggleAlarm"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"
        android:layout_margin="4dp"
        android:background="@drawable/alarm_on_off"
        android:buttonTint="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>
