<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <padding android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp" />
            <size  android:width="10dp"
                android:height="10dp" />
            <gradient
                android:startColor="@color/active_elt_start"
                android:endColor="@color/active_elt_end"
                android:type="sweep"
                />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="ring"
        android:innerRadius="10dp"
        android:thickness="7dp"
        android:useLevel="false">
            <gradient
                android:startColor="@color/clickable_elt_start"
                android:endColor="@color/clickable_elt_end"
                android:type="sweep"/>
            <size android:width="10dp" android:height="10dp" />
            <padding android:top="4dp" android:bottom="4dp" />
            <stroke android:width="1dp" android:color="@color/menu_bar_borders" />
        </shape>
    </item>
</layer-list>